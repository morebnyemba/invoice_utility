# Database Configuration
# Options: sqlite, postgresql, mysql
DB_TYPE=sqlite

# SQLite Configuration (default)
DB_NAME=invoices.db

# PostgreSQL Configuration (uncomment and configure for PostgreSQL)
#DB_TYPE=postgresql
#DB_HOST=localhost
#DB_PORT=5432
#DB_USER=invoice_user
#DB_PASSWORD=your_secure_password
#DB_DATABASE=invoice_db

# MySQL Configuration (uncomment and configure for MySQL)
#DB_TYPE=mysql
#DB_HOST=localhost
#DB_PORT=3306
#DB_USER=invoice_user
#DB_PASSWORD=your_secure_password
#DB_DATABASE=invoice_db

# Connection Pool Settings (for PostgreSQL/MySQL)
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10

# Application Settings
SECRET_KEY=your-secret-key-here-change-in-production
SESSION_TIMEOUT=3600
DEBUG=false

# Company Logo
LOGO_PATH=logo.png

# SMTP Email Configuration (optional - for sending invoices via email)
SMTP_PASSWORD=your_smtp_password
# Configure other SMTP settings in the application Settings page
